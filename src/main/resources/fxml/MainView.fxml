<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25"
            fx:controller="Fx_GUI_Classe.MainController">

    <!-- ======= TOP FILTER / BUTTON BAR ======= -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Label text="Min Price:" textFill="#e3cb1e"/>
            <TextField fx:id="minPriceField" promptText="z.B. 50"/>

            <CheckBox fx:id="onlyActiveCheck" text="Only Active"/>

            <!--            <Button text="View All" onAction="#findAllAction"/>-->
            <Button fx:id="findAll" onAction="#findAllAction" text="Find All" textFill="#3ec660"/>
            <Button onAction="#findAllAction" text="importfile" textFill="#628dd1"/>
            <Button onAction="#findAllAction" text="AddProduct" textFill="#d37272"/>
            <Button onAction="#findAllAction" text="insertAll" textFill="#c937ae"/>


            <!-- Rechts block -->
            <!--            <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">-->
            <!--&lt;!&ndash;                <Button text="Import" onAction="#onImport"/>&ndash;&gt;-->
            <!--&lt;!&ndash;                <Button text="Refresh" onAction="#onRefresh"/>&ndash;&gt;-->
            <!--            </HBox>-->
        </HBox>
    </top>

    <!-- ======= CENTER TABLE ======= -->
    <center>
        <TableView fx:id="tableProducts">
            <columns>

                <TableColumn fx:id="colId" prefWidth="70" text="ID"/>
                <TableColumn fx:id="colName" prefWidth="200" text="Name"/>
                <TableColumn fx:id="colPrice" prefWidth="100" text="Price"/>
                <TableColumn fx:id="colCategory" prefWidth="150" text="Category"/>
                <TableColumn fx:id="colActive" prefWidth="80" text="Active"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
